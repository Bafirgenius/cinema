<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Edit Movie</title>
</head>
<body>
    <%- include("partials/navigation") %>
    <h1 class="text-center">Edit Movie</h1>

    <% if (errors) { %>
        <% for (let i = 0; i < errors.length; i++) { %>
            <div class="alert alert-danger" role="alert">
                <%= errors[i] %>
              </div>
        <% } %>
    <% } %>

    <form action="/movies/<%= movie.id %>/edit" method="post" style="width:20%;margin:auto">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="<%= movie.name %>" placeholder="e.g: Avengers">
        </div>
        <div class="form-group" >
            <label for="genre-select">Genre</label>
            <select class="form-control" name="genre">
                <option value="" <%= movie.genre === "" ? "selected" : "" %>></option>
                <option value="animation" <%= movie.genre === "animation" ? "selected" : "" %>>animation</option>
                <option value="comedy" <%= movie.genre === "comedy" ? "selected" : "" %>>comedy</option>
                <option value="drama" <%= movie.genre === "drama" ? "selected" : "" %>>drama</option>
                <option value="horror" <%= movie.genre === "horror" ? "selected" : "" %>>horror</option>
                <option value="religious" <%= movie.genre === "religious" ? "selected" : "" %>>religious</option>
                <option value="sci-fi" <%= movie.genre === "sci-fi" ? "selected" : "" %>>sci-fi</option>
                <option value="thriller" <%= movie.genre === "thriller" ? "selected" : "" %>>thriller</option>
            </select>
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" name="date" value="<%= movie.date %>">
        </div>
        <div class="form-group">
            <label for="time">Time</label>
            <input type="time" class="form-control" name="time" value="<%= movie.time %>">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" name="price" value="<%= movie.price %>"placeholder="e.g: 60000">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary ">Update</button><a class="ml-3" href="/movies"><button type="button" class="btn btn-danger">Cancel</button></a>
        </div>
    </form>

<%- include("partials/foot") %>