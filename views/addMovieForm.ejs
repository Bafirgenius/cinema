<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Add Movie</title>
</head>
<body>
    <%- include("partials/navigation") %>
    <h1 class="text-center">Add Movie</h1>

    <% if (errors) { %>
        <% for (let i = 0; i < errors.length; i++) { %>
            <div class="alert alert-danger" role="alert">
                <%= errors[i] %>
              </div>
        <!-- <p style="color:red;text-align:center"><%= errors[i] %></p> -->
        <% } %>
    <% } %>
    
    <form action="/movies/add" method="post" style="width:20%;margin:auto">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" placeholder="e.g: 12 Angry Men">
        </div>
        <div class="form-group">
            <label for="released_year">Release Year</label>
            <input type="number" class="form-control" name="released_year" placeholder="e.g: 1957">
        </div>
        <div class="form-group" >
            <label for="genre-select">Genre</label>
            <select class="form-control" name="genre">
                <option></option>
                <option value="animation">animation</option>
                <option value="comedy">comedy</option>
                <option value="drama">drama</option>
                <option value="horror">horror</option>
                <option value="religious">religious</option>
                <option value="thriller">thriller</option>
            </select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary ">Save</button><a class="ml-3" href="/movies"><button type="button" class="btn btn-danger">Cancel</button></a>
        </div>
    </form>
