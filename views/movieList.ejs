<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Movies</title>
</head>
<body>
    <%- include("partials/navigation") %>
    <h1 class="text-left ml-3">Movie List</h1>
    <div class="text-right">
        <a href="/movies/add"><button type="button" class="btn btn-success mr-3">Add Movie</button></a>
    </div>
    <div class="ml-3 mr-3">
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th scope="col">Movie</th>
                    <th scope="col">Released Year</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Production House</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% movies.forEach(element => { %>
                    <tr>
                        <td><%= element.name %></td>
                        <td><%= element.released_year %></td>
                        <td><%= element.genre %></td>
                        <% if (!element.ProductionHouseId) { %>
                            <td>unknown</td>
                        <% } else { %> 
                            <td><%= element.ProductionHouse.name %></td>
                        <% } %> 
                        <div>
                            <td><a href="/movies/<%= element.id %>/edit"><button type="button" class="btn btn-info">Edit</button></a>
                                <a class="ml-3" href="/movies/<%= element.id %>/delete"><button type="button" class="btn btn-info">Delete</button></a>
                                <a class="ml-3" href="/movies/<%= element.id %>/add-cast"><button type="button" class="btn btn-info">Add Cast</button></a>
                            </td>
                        </div>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

<%- include("partials/foot") %>