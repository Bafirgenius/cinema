<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Casts</title>
</head>
<body>
    <%- include("partials/navigation") %>
    <h1 class="text-left ml-3">Cast List</h1>
    <div class="text-right">
        <a href="/casts/add"><button type="button" class="btn btn-success mr-3">Add Cast</button></a>
    </div>
    <div class="ml-3 mr-3">
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Birth Year</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% casts.forEach(element => { %>
                    <tr>
                        <td><%= element.getFullName() %></td>
                        <td><%= element.birth_year %></td>
                        <td><%= element.phone_number %></td>
                        <td><%= element.gender %></td>
                        <div>
                            <td><a href="/casts/<%= element.id %>/edit"><button type="button" class="btn btn-info">Edit</button></a>
                                <a class="ml-3" href="/casts/<%= element.id %>/delete"><button type="button" onClick="return confirm('Are you sure you want to delete this cast?')" class="btn btn-info">Delete</button></a>
                                <a class="ml-3" href="/casts/<%= element.id %>/see-movies"><button type="button" class="btn btn-info">See Movies</button></a>
                            </td>
                        </div>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

<%- include("partials/foot") %>