<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Customers</title>
</head>
<body>
    <%- include("partials/navigation") %>
    <h1 class="text-left ml-3">Customer List</h1>
    <div class="text-right">
        <a href="/customers/add"><button type="button" class="btn btn-success mr-3">Add Customer</button></a>
    </div>
    <div class="ml-3 mr-3">
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(element => { %>
                    <tr>
                        <td><%= element.first_name %></td>
                        <td><%= element.last_name %></td>
                        <td><%= element.phone_number %></td>
                        <td><%= element.gender %></td>
                        <td><%= element.email %> </td>
                        <div>
                            <td><a href="/customers/<%= element.id %>/edit"><button type="button" class="btn btn-info">Edit</button></a>
                                <a class="ml-3" href="/customers/<%= element.id %>/delete"><button type="button" onClick="return confirm('Are you sure you want to delete this customer?')" class="btn btn-info">Delete</button></a>
                            </td>
                        </div>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

<%- include("partials/foot") %>